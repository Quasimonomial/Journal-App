<form>
  <label>Title
  <input type="text" name="post[title]" value="<%= post.escape("title") %>">
</label>
  <label>Body
  <textarea name="post[body]"><%= post.escape("body") %></textarea>
  </label>
  <% if (post.id) { %>
    <input type="hidden" value="<%= post.id %>">
  <% } %>
  <input type="submit" value="submit">
</form>
